+FROM rust:1.82-slim-bookworm
+
+# Install dependencies for Ubuntu and Windows cross-compilation
+RUN apt-get update && apt-get install -y \
+  build-essential \
+  mingw-w64 \
+  mingw-w64-tools \
+  g++-mingw-w64-x86-64 \
+  libssl-dev \
+  pkg-config \
+  perl \
+  make \
+  curl \
+  file \
+  libc6-dev \
+  libglib2.0-dev \
+  libgtk-3-dev \
+  libwebkit2gtk-4.0-dev \
+  libayatana-appindicator3-dev \
+  librsvg2-dev \
+  libsoup-3.0-dev \
+  && rm -rf /var/lib/apt/lists/*
+
+# Install Node.js 20.x
+RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
+  && apt-get install -y nodejs \
+  && npm install -g npm@latest
+
+# Install Tauri CLI
+RUN npm install -g @tauri-apps/cli@2
+
+# Add Rust targets
+RUN rustup target add x86_64-pc-windows-gnu
+RUN rustup target add x86_64-unknown-linux-gnu
+
+WORKDIR /app
+COPY . .
+
+# Install frontend dependencies
+RUN npm install
+
+# Set environment variables for cross-compilation
+ENV PKG_CONFIG_ALLOW_CROSS=1
+ENV CC_x86_64_pc_windows_gnu=x86_64-w64-mingw32-gcc
+ENV CXX_x86_64_pc_windows_gnu=x86_64-w64-mingw32-g++
+ENV AR_x86_64_pc_windows_gnu=x86_64-w64-mingw32-ar
+ENV STRIP_x86_64_pc_windows_gnu=x86_64-w64-mingw32-strip
+
+# Build Linux version
+RUN cd src-tauri && cargo build --release --target x86_64-unknown-linux-gnu
+RUN npx tauri build --target x86_64-unknown-linux-gnu
+
+# Build Windows version with vendored OpenSSL
+ENV OPENSSL_NO_VENDOR=0
+ENV LIBSQLITE3_SYS_BUNDLED=1
+RUN cd src-tauri && cargo build --release --target x86_64-pc-windows-gnu
+RUN npx tauri build --target x86_64-pc-windows-gnu
+
+# Create output directory
+RUN mkdir -p /output
+
+# Copy executables to output
+RUN cp src-tauri/target/x86_64-pc-windows-gnu/release/*.exe /output/ 2>/dev/null || true
+RUN cp src-tauri/target/x86_64-unknown-linux-gnu/release/sqlcipher-tool /output/ 2>/dev/null || true
+
+CMD ["ls", "-la", "/output"]
